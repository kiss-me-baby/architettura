#include<stdio.h>

/*DA FINIRE*/
void main() {
	char stringa[] = "questa è una stringa";
	int lunghezza = sizeof(stringa) - 1;
	char carattere = "è";
	int posizione;

	__asm {
					XOR ECX, ECX; indice
					MOV EBX, lunghezza
					MOV AH, carattere

					CMP ECX, EBX
					JGE fine
					MOV AL, stringa[EBX]
					CMP AH, AL
					JE trovato
					MOV stringa[EBX], stringa[EBX + 1]

		fine:		MOV ECX, -1
		trovato :	MOV posizione, ECX


	}

	printf("Posizione = %d\n", posizione);
}

